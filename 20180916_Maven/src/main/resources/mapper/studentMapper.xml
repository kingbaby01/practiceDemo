<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maven.mybatis.dao.StudentDao">

    <resultMap id="BaseResultMap" type="com.maven.mybatis.domain.Student">
        <id column="s_id" property="id" jdbcType="VARCHAR" />
        <result column="s_name" property="name" jdbcType="VARCHAR" />
        <result column="s_age" property="age" jdbcType="INTEGER" />
    </resultMap>

    <!-- 查询单条记录 -->
    <select id="findById" parameterType="String" resultMap="BaseResultMap">
        SELECT * FROM students WHERE s_id = #{id}
    </select>

    <insert id="addOne" >
        INSERT INTO students (s_id, s_name, s_age) VALUES (#{id}, #{name}, #{age})
    </insert>

    <update id="update" >
        UPDATE students SET s_name=#{name}, s_age=#{age} WHERE s_id = #{id}
    </update>

    <delete id="deleteById" >
        DELETE FROM students WHERE s_id = #{id}
    </delete>
</mapper>
